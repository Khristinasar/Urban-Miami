<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
       <%= link_to "Urban Miami", products_path, class: "navbar-brand", id: "logo" %>
    </div>

    <ul class="nav navbar-nav navbar-right">
      <%= form_tag(products_path, :method => "get", id: "search-form") do %>
        <li>
          <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
          <%= text_field_tag :search, params[:search] %>
          <p class="submit"><%= submit_tag "Search", :name => nil %></p>
        <li>
      <% end %>

     <% if logged_in? %>
       <li><a href="#"><i class="fa fa-shopping-cart" aria-hidden="true"></i></a></li>
       <li class="dropdown">
         <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
           <%= current_user.name %>
           <span class="caret"></span>
         </a>
         <ul class="dropdown-menu">
           <li class="dropdown-header header-nav-current-user">
             Signed in as <%= if current_user.admin? then "Admin" else current_user.name end %>
           </li>
           <li role="separator" class="divider"></li>
           <li><%= link_to "Shopping Cart" %></li>
           <li><%= link_to "View your profile", user_path(current_user) %></li>
           <li><%= link_to "Edit your profile", edit_user_path(current_user) %></li>
           <li role="separator" class="divider"></li>
           <li><%= link_to 'Log out', logout_path, method: :delete %></li>
         </ul>
       </li>
     <% else %>
       <li><%= link_to 'Log in', login_path %></li>
       <li><%= link_to 'Sign up', signup_path %></li>
     <% end %>
   </ul>
   </div>
</nav>
